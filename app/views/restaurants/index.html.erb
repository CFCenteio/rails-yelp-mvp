<p style="color: green"><%= notice %></p>

<div class="container" id="restaurants">
  <h1>Restaurants</h1>
  <% @restaurants.each do |restaurant| %>
    <div class="card m-3">
      <%= render restaurant %>
      <p>
        <%= link_to "Show this restaurant", restaurant %>
      </p>
    </div>
  <% end %>
  <div class="btn btn-dark">
    <%= link_to "New restaurant", new_restaurant_path %>
  </div>
</div>
